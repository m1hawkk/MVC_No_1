@model IEnumerable<MVC_No_1.Models.Employee>

<h1 class="text-center">Employee Management</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</p>


<table class="table table-bordered table-striped" id="employeeTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="employeeTableBody">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Department</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No employee data available.</td>
            </tr>
        }
    </tbody>
</table>
